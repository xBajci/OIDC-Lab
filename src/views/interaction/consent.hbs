<div class="bg-white rounded-lg shadow-xl p-8">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Authorize</h1>
    <p class="text-gray-600 mt-2">
      <strong>{{client.name}}</strong> is requesting access to your account
    </p>
  </div>

  {{#if session.accountId}}
  <div class="bg-gray-50 border border-gray-200 rounded-md p-3 mb-4 text-sm">
    <span class="text-gray-600">Signed in as:</span>
    <span class="font-medium text-gray-900">{{session.accountId}}</span>
  </div>
  {{/if}}

  <div class="mb-6">
    <h2 class="text-sm font-medium text-gray-700 mb-3">This application will be able to:</h2>
    <ul class="space-y-2">
      {{#each scopes}}
      <li class="flex items-center">
        <svg class="h-5 w-5 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-gray-700">
          {{#if (eq this "profile")}}
          Access your profile information (name, username)
          {{else if (eq this "email")}}
          Access your email address
          {{else if (eq this "offline_access")}}
          Stay signed in (refresh tokens)
          {{else}}
          {{this}}
          {{/if}}
        </span>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="flex space-x-3">
    <form action="/interaction/{{uid}}/abort" method="POST" class="flex-1">
      <button
        type="submit"
        class="w-full py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Deny
      </button>
    </form>

    <form action="/interaction/{{uid}}/confirm" method="POST" class="flex-1">
      <button
        type="submit"
        class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Authorize
      </button>
    </form>
  </div>

  <div class="mt-6 text-center text-sm text-gray-500">
    <p>Client ID: <code class="bg-gray-100 px-1 rounded">{{client.id}}</code></p>
  </div>
</div>
